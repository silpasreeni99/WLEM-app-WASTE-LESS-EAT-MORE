<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/food6"
    android:paddingStart="100dp"
    android:paddingTop="100dp"
    android:paddingEnd="100dp"
    android:paddingBottom="50dp"
    tools:context=".MainActivity12">


    <TextView
        android:id="@+id/textView16"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/tea1"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/rec1info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView16"
        android:layout_marginTop="28dp"
        android:autofillHints=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:gravity="start|top"

        android:text="@string/rectext1"
        android:textColor="#000000" />

            <Button
        android:id="@+id/button_tea1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_below="@id/rec1info"
        android:onClick="navigate1"
        android:text="@string/head1" />






</RelativeLayout>
</ScrollView>