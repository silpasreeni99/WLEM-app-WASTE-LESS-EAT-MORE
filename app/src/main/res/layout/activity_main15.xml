<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/food7"
    android:paddingStart="100dp"
    android:paddingTop="100dp"
    android:paddingEnd="100dp"
    android:paddingBottom="50dp"
    tools:context=".MainActivity15">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="@string/banpeelhead2"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/banpeelrec2info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView19"
        android:layout_marginTop="41dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:gravity="start|top"
        android:text="@string/bancakeinfo"
        android:textColor="#000000" />

    <Button
        android:id="@+id/button_banreccake1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/banpeelrec2info"
        android:layout_marginTop="20dp"
        android:onClick="navigate4"
        android:text="@string/info4" />

</RelativeLayout>
</ScrollView>