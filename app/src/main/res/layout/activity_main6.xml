<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha=" 0.9"
        android:background="@drawable/food3"
        android:paddingStart="50dp"
        android:paddingTop="50dp"
        android:paddingEnd="50dp"
        android:paddingBottom="50dp"
        tools:context=".MainActivity6">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:text="@string/recipelist1"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_hibrec1"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/textView5"
            android:layout_marginTop="50dp"
            android:background="#70FBFBFB"
            android:fontFamily="casual"
            android:onClick="hibrec1"
            android:text="@string/rec2"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_hibrec2"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/button_hibrec1"
            android:layout_marginTop="10dp"
            android:background="#70FBFBFB"
            android:fontFamily="casual"
            android:onClick="hibrec2"
            android:text="@string/rec1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>